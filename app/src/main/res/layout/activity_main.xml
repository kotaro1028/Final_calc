<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/resultview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:paddingRight="15dp"
        android:paddingTop="20px"
        android:textAlignment="textEnd"
        tools:ignore="RtlCompat" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="20px"
        >
        <Button
            android:id="@+id/one"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:text="1"/>
        <Button
            android:id="@+id/two"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:text="2"/>
        <Button
            android:id="@+id/three"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="3"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="20px"
        >
        <Button
            android:id="@+id/four"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:text="4"/>
        <Button
            android:id="@+id/five"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:text="5"/>
        <Button
            android:id="@+id/six"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="6"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="20px"
        >
        <Button
            android:id="@+id/seven"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:text="7"/>
        <Button
            android:id="@+id/eight"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:text="8"/>
        <Button
            android:id="@+id/nine"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="9"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="20px"
        >
        <Button
            android:id="@+id/zero"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:text="0"/>
        <Button
            android:id="@+id/add"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:text="+"/>
        <Button
            android:id="@+id/sub"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="-"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="20px"
        >
        <Button
            android:id="@+id/mult"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:text="*"/>
        <Button
            android:id="@+id/divide"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:text="/"/>
        <Button
            android:id="@+id/equal"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="="/>


    </LinearLayout>


</LinearLayout>